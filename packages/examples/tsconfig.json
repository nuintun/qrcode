{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ESNext",
      "WebWorker",
      "DOM.Iterable",
      "DOM.AsyncIterable",
      "Webworker.Iterable",
      "WebWorker.AsyncIterable"
    ],
    "paths": {
      "/js/*": [
        "app/js/*"
      ],
      "/css/*": [
        "app/css/*"
      ],
      "/images/*": [
        "app/images/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
